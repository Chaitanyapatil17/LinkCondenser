<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #6200ea;
            --secondary: #3700b3;
            --success: #03dac6;
            --surface: #ffffff;
            --surface-hover: #f5f5f5;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            min-height: 100vh;
            display: grid;
            place-items: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .card {
            background: var(--surface);
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 460px;
            padding: 2.5rem;
            transition: transform 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
        }

        .card:hover {
            transform: translateY(-3px);
        }

        h1 {
            color: var(--primary);
            font-size: 2rem;
            margin-bottom: 1.75rem;
            text-align: center;
            letter-spacing: -0.5px;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.25rem;
        }

        input {
            width: 100%;
            padding: 14px;
            border: 2px solid var(--surface-hover);
            border-radius: 10px;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(98, 0, 234, 0.15);
            outline: none;
        }

        button {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        button:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        button:active {
            transform: translateY(0);
        }

        .result {
            margin-top: 1.75rem;
            padding: 1.25rem;
            background: var(--surface-hover);
            border-radius: 10px;
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.4s;
        }

        .result.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .short-url {
            display: flex;
            align-items: center;
            gap: 12px;
            word-break: break-all;
        }

        .checkmark {
            color: var(--success);
            font-size: 1.2rem;
        }

        a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

        a:hover {
            color: var(--secondary);
            text-decoration: underline;
        }

        .copy-btn {
            background: none;
            border: none;
            color: var(--primary);
            cursor: pointer;
            font-size: 0.9rem;
            opacity: 0.7;
            transition: opacity 0.3s;
        }

        .copy-btn:hover {
            opacity: 1;
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            h1 {
                font-size: 1.75rem;
            }
            
            .card {
                padding: 1.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="card">
        <h1>Shorten URL</h1>
        <div class="input-group">
            <input type="text" id="longUrl" placeholder="Paste your long URL here..." required>
        </div>
        <button onclick="shortenURL()">Create Short Link</button>
        
        <div class="result" id="result">
            <div class="short-url">
                <span class="checkmark">âœ“</span>
                <a href="#" target="_blank" id="shortUrl"></a>
                <button class="copy-btn" onclick="copyURL()">Copy</button>
            </div>
        </div>
    </div>

    <script>
        function shortenURL() {
            const result = document.getElementById('result');
            const shortUrl = document.getElementById('shortUrl');
            
            // Simulate API call
            result.classList.remove('visible');
            setTimeout(() => {
                shortUrl.href = "https://short.url/abcd1234";
                shortUrl.textContent = "https://short.url/abcd1234";
                result.classList.add('visible');
            }, 500);
        }

        function copyURL() {
            const shortUrl = document.getElementById('shortUrl');
            navigator.clipboard.writeText(shortUrl.href);
            alert('URL copied to clipboard!');
        }
    </script>
</body>
</html>